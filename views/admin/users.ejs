<%- include('../partials/header') %>

<section class="admin-header">
  <div class="container">
    <h1 class="page-title"><i data-lucide="settings"></i> <span data-i18n="admin_user_mgmt">Управление пользователями</span></h1>
    <nav class="admin-nav">
      <a href="/admin" class="admin-tab" data-i18n="admin_tab_home">Главная</a>
      <a href="/admin/news" class="admin-tab" data-i18n="admin_tab_news">Новости</a>
      <a href="/admin/servers" class="admin-tab" data-i18n="admin_tab_servers">Сервера</a>
      <a href="/admin/users" class="admin-tab active" data-i18n="admin_tab_users">Пользователи</a>
      <a href="/admin/settings" class="admin-tab" data-i18n="admin_tab_settings">Настройки</a>
    </nav>
  </div>
</section>

<section class="section container">
  <div class="admin-table-wrapper">
    <div class="admin-section-header">
      <h2 data-i18n="admin_users_title">Пользователи</h2>
      <span style="font-size: 0.9rem; color: var(--text-secondary); font-weight: normal;"><%= users.length %> <span data-i18n="admin_users_count">пользователей</span></span>
    </div>

    <div class="table-responsive">
      <table class="data-table">
        <thead>
          <tr>
            <th data-i18n="admin_th_id">ID</th>
            <th data-i18n="admin_th_username">Имя</th>
            <th data-i18n="admin_th_email">Email</th>
            <th data-i18n="admin_th_role">Роль</th>
            <th data-i18n="admin_th_last_login">Посл. вход</th>
            <th data-i18n="admin_th_last_ip">Посл. IP</th>
            <th data-i18n="admin_th_registered">Регистрация</th>
            <th data-i18n="admin_th_actions">Действия</th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach(function(u) { %>
            <tr>
              <td><%= u.id %></td>
              <td><strong><%= u.username %></strong></td>
              <td><%= u.email || '-' %></td>
              <td>
                <span class="role-badge role-<%= u.role %>"><%= u.role %></span>
              </td>
              <td><%= u.last_login ? new Date(u.last_login).toLocaleString() : '<span data-i18n="admin_never">Никогда</span>' %></td>
              <td class="mono"><%= u.last_ip || '-' %></td>
              <td><%= new Date(u.created_at).toLocaleDateString() %></td>
              <td class="actions-cell">
                <form action="/admin/users/<%= u.id %>/delete" method="POST" style="display:inline;" onsubmit="return confirm((window.i18n ? window.i18n.t('admin_confirm_delete_user') : 'Удалить пользователя') + ' <%= u.username %>?')">
                  <button type="submit" class="btn btn-xs btn-danger" data-i18n="delete">Удалить</button>
                </form>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </div>
</section>

<%- include('../partials/footer') %>
